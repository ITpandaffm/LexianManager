<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
	
		<!-- 商品管理 -->
		<typeAlias type="com.lexian.manager.authority.bean.Manager" alias="Manager" />
		<typeAlias type="com.lexian.manager.authority.bean.Menu" alias="Menu" />
		<typeAlias type="com.lexian.manager.authority.bean.Privilege" alias="Privilege" />
		<typeAlias type="com.lexian.manager.authority.bean.Role" alias="Role" />
		<typeAlias type="com.lexian.manager.authority.bean.RoleManager" alias="RoleManager" />
		<typeAlias type="com.lexian.manager.authority.bean.RoleMenu" alias="RoleMenu" />
		<typeAlias type="com.lexian.manager.authority.bean.RolePrivilege" alias="RolePrivilege" />
		
		<!-- 会员管理 -->
		<typeAlias type="com.lexian.manager.vip.bean.User" alias="User" />
		
		<!-- 订单管理 -->
		<typeAlias type="com.lexian.manager.order.bean.OrderItem" alias="OrderItem" />
		<typeAlias type="com.lexian.manager.order.bean.Orders" alias="Orders" />
		
		<!-- 门店管理 -->
		<typeAlias type="com.lexian.manager.shop.bean.Store" alias="Store"/>
		<typeAlias type="com.lexian.manager.shop.bean.CommodityStore" alias="CommodityStore"/>
		
		<typeAlias type="com.lexian.manager.goods.bean.Category" alias="Category" />
		<typeAlias type="com.lexian.manager.goods.bean.Commodity" alias="Commodity" />
		<typeAlias type="com.lexian.manager.goods.bean.CommoditySpec" alias="CommoditySpec" />
		<typeAlias type="com.lexian.manager.shop.bean.Citys" alias="Citys"/>
		
		<typeAlias type="com.lexian.manager.statistics.bean.CommodityStatistics" alias="CommodityStatistics" />
		<typeAlias type="com.lexian.manager.statistics.bean.StoreCommodityStatistics" alias="StoreCommodityStatistics"/>
		
	</typeAliases>
	
	<plugins>  
        <plugin interceptor="com.lexian.interceptor.PageInterceptor"></plugin>  
    </plugins>
	
</configuration>
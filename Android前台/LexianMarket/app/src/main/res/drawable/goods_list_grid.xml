<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/bg_category_selected" />
            <gradient android:angle="270.0" android:endColor="@color/bg_category_selected" android:startColor="@color/bg_category_selected" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/bg_category_selected" android:startColor="@color/bg_category_selected" />
            <stroke android:width="1.0px" android:color="@color/bg_category_selected" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/bg_white" android:startColor="@color/bg_white" />
            <stroke android:width="1.0px" android:color="@color/bg_category_selected" />
        </shape>
    </item>

</selector>